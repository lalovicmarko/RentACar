@model RentACar.ViewModels.CarFormViewModel
@{
    ViewBag.Title = "CarForm";
}

@if (Model.Car.Id == 0)
{
    <h3>Dodaj auto</h3>
}
else
{
    <h3>Izmeni auto</h3>
}

@using (Html.BeginForm("Save", "Cars",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Name, "Model")
        @Html.TextBoxFor(c => c.Car.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Car.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.CarTypeId, "Tip auta")
        @Html.DropDownListFor(c => c.Car.CarTypeId, new SelectList(Model.CarTypes, "Id", "Name"), "Izaberi tip auta", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Car.CarTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Description, "Opis")
        @Html.TextAreaFor(c => c.Car.Description, htmlAttributes: new { @class = "form-control", @rows = 10, @cols = 30 })
        @Html.ValidationMessageFor(c => c.Car.Description)
    </div>
    @Html.HiddenFor(c => c.Car.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-black">Sačuvaj</button>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
