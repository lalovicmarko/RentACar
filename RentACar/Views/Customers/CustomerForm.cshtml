@model RentACar.Models.Customer
@{
    ViewBag.Title = "CustomerForm";
}

@if (Model.Id == 0)
{
    <h3>Dodaj klijenta</h3>
}
else
{
    <h3>Izmeni klijenta</h3>
}

@using (Html.BeginForm("Save", "Customers", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name, "Ime")
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone, "Telefon")
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Email)
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", type = "email" })
        @Html.ValidationMessageFor(c => c.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Address, "Adresa")
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Address)
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-black">Sačuvaj</button>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

